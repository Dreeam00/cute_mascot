<Window x:Class="MascotApp.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="マスコットメニュー"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#CCFFFFFF" 
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True">
    <Window.Resources>
        <!-- ボタンのスタイル (MainWindowからコピー) -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF4A90E2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,2,0,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="MinWidth" Value="150"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF357ABD"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#FF2E6DA4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="MenuHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
        <Style x:Key="MenuSeparatorStyle" TargetType="Rectangle">
            <Setter Property="Height" Value="1"/>
            <Setter Property="Fill" Value="#FFDDDDDD"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Gray" Direction="270" ShadowDepth="3" BlurRadius="5" Opacity="0.3"/>
    </Window.Resources>
    <Border Background="White" CornerRadius="8" Padding="15" Effect="{StaticResource DropShadowEffect}" BorderBrush="#FFCCCCCC" BorderThickness="2">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="メニュー" Style="{StaticResource MenuHeaderStyle}"/>
                <Rectangle Style="{StaticResource MenuSeparatorStyle}"/>

                <Button x:Name="PlayModeButton" Content="遊び" Style="{StaticResource MenuButtonStyle}" Click="PlayModeButton_Click"/>
                <StackPanel x:Name="GameModesPanel" Visibility="Collapsed" Margin="0,5,0,0">
                    <Button x:Name="JumpModeButton" Content="ジャンプ" Style="{StaticResource MenuButtonStyle}" Click="JumpModeButton_Click"/>
                    <Button x:Name="TagModeButton" Content="鬼ごっこ (追いかけられる)" Style="{StaticResource MenuButtonStyle}" Click="TagModeButton_Click"/>
                    <Button x:Name="ChaseModeButton" Content="鬼ごっこ (追いかける)" Style="{StaticResource MenuButtonStyle}" Click="ChaseModeButton_Click"/>
                    <Button x:Name="WalkModeButton" Content="デスクトップ散歩" Style="{StaticResource MenuButtonStyle}" Click="WalkModeButton_Click"/>
                    <Button x:Name="MoleGameButton" Content="もぐらたたき" Style="{StaticResource MenuButtonStyle}" Click="MoleGameButton_Click"/>
                </StackPanel>

                <Rectangle Style="{StaticResource MenuSeparatorStyle}"/>

                <Button x:Name="ActionButton" Content="アクション" Style="{StaticResource MenuButtonStyle}" Click="ActionButton_Click"/>
                <StackPanel x:Name="ActionPanel" Visibility="Collapsed" Margin="0,5,0,0">
                    <Button x:Name="StretchButton" Content="伸び" Style="{StaticResource MenuButtonStyle}" Click="StretchButton_Click"/>
                    <Button x:Name="YawnButton" Content="あくび" Style="{StaticResource MenuButtonStyle}" Click="YawnButton_Click"/>
                    <Button x:Name="LookAroundButton" Content="きょろきょろ" Style="{StaticResource MenuButtonStyle}" Click="LookAroundButton_Click"/>
                    <Button x:Name="SitButton" Content="座る" Style="{StaticResource MenuButtonStyle}" Click="SitButton_Click"/>
                    <Button x:Name="LieDownButton" Content="寝転がる" Style="{StaticResource MenuButtonStyle}" Click="LieDownButton_Click"/>
                </StackPanel>

                <Rectangle Style="{StaticResource MenuSeparatorStyle}"/>

                <Button x:Name="MonologueButton" Content="独り言" Style="{StaticResource MenuButtonStyle}" Click="MonologueButton_Click"/>

                <Rectangle Style="{StaticResource MenuSeparatorStyle}"/>

                <Button Content="閉じる" Style="{StaticResource MenuButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Window>
