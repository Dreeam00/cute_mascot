<Window x:Class="MascotApp.MoleGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="もぐらたたきゲーム"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        ShowInTaskbar="False"
        Topmost="True">
    <Grid>
        <Canvas x:Name="GameCanvas" Background="#FF222222">
            <Image x:Name="MascotMole" Source="Images/mascot.png" Width="100" Height="100" Visibility="Collapsed" MouseLeftButtonDown="MascotMole_MouseLeftButtonDown" Cursor="Hand"/>
            <TextBlock x:Name="ScoreText" Text="スコア: 0" FontSize="24" FontWeight="Bold" Foreground="White" Canvas.Left="10" Canvas.Top="10"/>
            <TextBlock x:Name="TimeText" Text="時間: 30" FontSize="24" FontWeight="Bold" Foreground="White" Canvas.Right="10" Canvas.Top="10"/>
            <Button Content="終了" Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Bottom" Canvas.Right="10" Canvas.Bottom="10"/>
        </Canvas>
    </Grid>
</Window>
