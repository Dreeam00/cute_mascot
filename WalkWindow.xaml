<Window x:Class="MascotApp.WalkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="デスクトップ散歩"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#87CEEB" 
        WindowState="Maximized"
        ShowInTaskbar="False"
        Topmost="True">
    <Canvas x:Name="GameCanvas">
        <Image x:Name="MascotImage" Width="100" Height="100" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="MessageText" Text="" FontSize="16" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="20" Canvas.Left="0" Canvas.Top="0"/>
        <Button Content="終了" Click="ExitButton_Click" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10" Canvas.Right="0" Canvas.Top="0"/>
    </Canvas>
</Window>
